{
    "name": "@ecotrack/contracts",
    "version": "1.0.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "scripts": {
        "deploy": "hardhat run scripts/deploy.ts",
        "dev": "npm run build:watch",
        "build": "forge build && hardhat compile && npm run generate-artifacts",
        "build:watch": "nodemon --watch contracts --watch scripts --ext sol,ts,js --exec 'yarn run build'",
        "generate-artifacts": "ts-node scripts/generate-artifacts.ts",
        "type-check": "tsc --noEmit"
    },
    "exports": {
        "./abis": "./dist/abis/index.js",
        "./types": "./dist/types/index.d.ts",
        "./deployments": "./deployments.json"
    },
    "files": [
        "dist",
        "deployments.json"
    ],
    "devDependencies": {
        "@typechain/ethers-v5": "^10.0.0",
        "@typechain/hardhat": "^6.0.0",
        "hardhat": "^2.0.0",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "typechain": "^8.0.0",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@ecotrack/types": "*",
        "@openzeppelin/contracts": "^5.4.0",
        "abitype": "^1.1.0",
        "web-ifc": "^0.0.71",
        "xml2js": "^0.6.2"
    }
}
