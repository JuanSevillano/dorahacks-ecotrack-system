{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "jsx": "react-jsx",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "src/**/*.json",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}